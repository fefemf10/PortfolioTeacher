{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=3306;Database=portfolioIdentity;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IdentityServer": {
    "IssuerUri": "https://localhost:4001",

    "ApiScopes": [
      {
        "Name": "PortfolioServer"
      }
    ],
    "ApiResources": [
      {
        "Name": "PortfolioServer"
      }
    ],
    "Clients": [
      {
        "ClientId": "m2m",
        "ClientSecret": "client_secret",
        "AllowedGrantTypes": [
          "client_credentials"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "PortfolioSite"
        ]
      },
      {
        "ClientId": "PortfolioSite",
        "AllowedGrantTypes": [
          "authorization_code"
        ],
        "AllowedScopes": [
          "openid",
          "profile",
          "PortfolioServer"
        ],
        "RedirectUris": [
          "https://localhost:4001/authentication/login-callback"
        ],
        "PostLogoutRedirectUris": [
          "https://localhost:4001/authentication/logout-callback"
        ],
        "RequireClientSecret": false
      }
    ]
  }
}
