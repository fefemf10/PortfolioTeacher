@inherits LayoutComponentBase
@inject NavigationManager navigationManager


<MediaQueryList>
	@if (isDesktop)
	{
		<Layout>
			<Layout Sider>
				<LayoutSider>
					<LayoutSiderContent>
						<AuthorizeView>
							<Authorized>
								<SideMenu />
							</Authorized>
						</AuthorizeView>
					</LayoutSiderContent>
				</LayoutSider>
				<Layout>
					<LayoutContent Padding="Padding.Is3.OnAll">
						@Body
					</LayoutContent>
				</Layout>
			</Layout>
		</Layout>
	}
	else
	{
		<Layout>
			<LayoutHeader>
				<AuthorizeView>
					<Authorized>
						<NavMenu />
					</Authorized>
				</AuthorizeView>
			</LayoutHeader>
			<LayoutContent Padding="Padding.Is3.OnAll">
				@Body
			</LayoutContent>
		</Layout>
	}

	<MediaQuery Media="@Breakpoints.LargeUp" @bind-Matches="isDesktop" />
</MediaQueryList>


@code {
	private bool isDesktop = false;
}