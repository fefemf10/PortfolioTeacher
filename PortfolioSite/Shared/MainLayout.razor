@inherits LayoutComponentBase
@inject NavigationManager navigationManager
@inject IdentityAuthenticationStateProvider authStateProvider
<MediaQueryList>
	@if (isDesktop)
	{
		<Layout>
			<Layout Sider>
				<LayoutSider>
					<LayoutSiderContent>
						<SideMenu />
					</LayoutSiderContent>
				</LayoutSider>
				<Layout>
					<LayoutContent Padding="Padding.Is3.OnAll">
						@Body
					</LayoutContent>
				</Layout>
			</Layout>
		</Layout>
	}
	else
	{
		<Layout>
			<LayoutHeader>
				<NavMenu />
			</LayoutHeader>
			<LayoutContent Padding="Padding.Is3.OnAll">
				@Body
			</LayoutContent>
		</Layout>
	}
	<MediaQuery Media="@Breakpoints.LargeUp" @bind-Matches="isDesktop" />
</MediaQueryList>

@code{
	private bool isDesktop = false;
}